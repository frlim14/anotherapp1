
<h2 align="center">Name: <%= @article.name %></h2>
<h3 align="center">Job Title: <%= @article.job_title %></h3>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Description / Story:</strong></h4>
  <hr>
	<%= simple_format(@article.description) %>
  <div class="article-actions">
	<%= link_to 'Show all articles', articles_path, class: "btn btn-xs btn-success" %>
	<%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
	<%= link_to 'Delete this article', article_path(@article), method: :delete, 
					data: {confirm: "Are you sure you want to delete this article?"},
					class: "btn btn-xs btn-danger" %>

  </div>
</div>