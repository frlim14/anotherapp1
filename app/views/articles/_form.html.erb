<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
	<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
	 <div class="form-group">
	    <div class="control-label col-sm-2">
	  <%= f.label :name %> 
	    </div>
	  <div class="col-sm-8">
	    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
	  </div>
	 </div>
	 <div class="form-group">
	    <div class="control-label col-sm-2">
	  <%= f.label :job_title %>
	    </div>
	  <div class="col-sm-8">
	  <%= f.text_field :job_title, class: "form-control", placeholder: "Job Title" %>
	  </div>
	 </div>
	 <div class="form-group">
	    <div class="control-label col-sm-2">
	  <%= f.label :description %> 
	    </div>
	  <div class="col-sm-8">
	  <%= f.text_area :description, rows: "10", class: "form-control", placeholder: "What's your story" %>
	  </div>
	</div>
	<div class="form-group">
	  <div class="col-sm-offset-2 col-sm-10">
	 <%= f.submit class: 'btn btn-primary btn-lg' %>
	  </div>
	</div>
	<% end %>
	<div class="col-xs-4 col-xs-offset-4">
    	[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>